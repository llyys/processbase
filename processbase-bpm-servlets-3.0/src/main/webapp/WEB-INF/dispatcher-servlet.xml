<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  
  xmlns:p="http://www.springframework.org/schema/p"
  xsi:schemaLocation="
   http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <!-- Activate Spring annotation support -->
    <!--<context:annotation-config/>-->

    <!-- Vaadin application controller -->
    <bean id="applicationServlet" class="org.springframework.web.servlet.mvc.ServletWrappingController"
      p:servletClass="org.processbase.ui.servlet.AutowiringApplicationServlet.PbServlet">
        <property name="initParameters">
            <props>
                <prop key="application">org.processbase.ui.servlet.PbApplication</prop>                
                <prop key="productionMode">false</prop>
            </props>
        </property>
    </bean>
	
	 

    <!-- Map URIs to web controllers -->
    <bean class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="urlMap">
            <map>
                <entry key="/**/*" value-ref="applicationServlet"/>
            </map>
        </property>
    </bean>

</beans>
