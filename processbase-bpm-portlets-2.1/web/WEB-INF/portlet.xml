<?xml version="1.0" encoding="UTF-8"?>
<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.0" xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd">
    <portlet>
        <portlet-name>UserPortlet</portlet-name>
        <display-name>UserPortlet</display-name>
        <portlet-class>com.vaadin.terminal.gwt.server.ApplicationPortlet2</portlet-class>
        <init-param>
            <name>application</name>
            <value>org.processbase.ui.portlet.UserPortlet</value>
        </init-param>
        <init-param>
            <name>widgetset</name>
            <value>org.processbase.vaadin.widgetset.DefaultWidgetSet</value>
        </init-param>
        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>view</portlet-mode>
            <portlet-mode>edit</portlet-mode>
            <portlet-mode>help</portlet-mode>
        </supports>
        <portlet-info>
            <title>UserPortlet</title>
            <short-title>UserPortlet</short-title>
        </portlet-info>
    </portlet>
    <portlet>
        <portlet-name>AdminPortlet</portlet-name>
        <display-name>AdminPortlet</display-name>
        <portlet-class>com.vaadin.terminal.gwt.server.ApplicationPortlet2</portlet-class>
        <init-param>
            <name>application</name>
            <value>org.processbase.ui.portlet.AdminPortlet</value>
        </init-param>
        <init-param>
            <name>widgetset</name>
            <value>org.processbase.vaadin.widgetset.DefaultWidgetSet</value>
        </init-param>
        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>view</portlet-mode>
            <portlet-mode>edit</portlet-mode>
            <portlet-mode>help</portlet-mode>
        </supports>
        <portlet-info>
            <title>AdminPortlet</title>
            <short-title>AdminPortlet</short-title>
        </portlet-info>
    </portlet>
</portlet-app>